<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_header" inherit_id="website.layout" name="Custom Header">
        <xpath expr="//header" position="replace">
            <link rel="stylesheet"
                  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>

            <header>


                <!-- Topbar start -->
                <div class="bord">
                    <div class=" bg-white  wow fadeIn" data-wow-delay="0.1s">
                        <div class="row gx-0 d-none d-lg-flex">
                            <div class="col-lg-7 px-5 text-start">
                                <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                                    <!-- Icône téléphone -->
                                    <small class="fas fa-phone-alt icon-phone me-2"></small>
                                    <a href="tel:+233302780535" class="text-red text-decoration-none">
                                        <small>+233 302 780 535</small>
                                    </a>
                                </div>
                                <div class="h-100 d-inline-flex align-items-center py-3">
                                    <!-- Icône enveloppe -->
                                    <small class="fas fa-envelope icon-envelope me-2"></small>
                                    <a href="mailto:info@gfza.gov.gh" class="text-red text-decoration-none">
                                        <small>info@gfza.gov.gh</small>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-5 px-5 text-end">
                                <!-- Liens vers les réseaux sociaux avec icônes -->
                                <div class="h-100 d-inline-flex align-items-center ">
                                    <a href="https://www.facebook.com" target="_blank" title="Facebook" class="me-1">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                    <a href="https://x.com" target="_blank" title="X (Twitter)" class="me-1">
                                        <i class="fa fa-twitter m-1" style="color: #c21f27"></i>  <!-- Ou "fab fa-twitter" si vous préférez -->
                                    </a>
                                    <a href="https://www.linkedin.com" target="_blank" title="LinkedIn" class="me-1">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                    <a href="https://www.youtube.com" target="_blank" title="YouTube">
                                        <i class="fa m-1 fa-youtube" style="color: #c21f27"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="separator"/>


                <!-- Topbar End -->

                <!-- Navbar Start -->
                <div class="bord1">
                    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0 wow fadeIn"
                         data-wow-delay="0.1s">
                        <a href="index.html" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
                            <h1 class="m-0 text-primary">
                                <img src="\theme_GZ\static\src\img\LOGO.jfif" alt="Logo de GFZA" class="logo-image"/>
                            </h1>
                        </a>

                        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse"
                                data-bs-target="#navbarCollapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            <div class="navbar-nav me-auto">
                                <!-- Lien Home -->
                                <a href="index.html" class="nav-item nav-link active nav-link-offset">Home</a>
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle nav-link-offset"
                                       data-bs-toggle="dropdown">
                                        Help
                                    </a>
                                    <ul class="dropdown-menu rounded-0 rounded-bottom m-0">
                                        <li>
                                            <a href="#" class="dropdown-item">Frequently Asked Questions (FAQ)</a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item">Guideline/Procedure</a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item">Terms and Conditions</a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item">Contact Us</a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item">Useful links</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="navbar-nav" style=" padding-right: 40px;">
                                <a href="signin.html" class="nav-item nav-link sign">Sign In</a>
                                <!-- Lien Registration  -->
                                <a href="https://gfzep.gfza.gov.gh/portal/signup"
                                   class="nav-item nav-link btn btn-danger registration-btn">
                                    Registration
                                </a>
                            </div>
                        </div>
                    </nav>

                </div>
                <!-- Navbar End -->


                <!-- Carousel Start -->

                <div id="carouselExampleIndicators" class="carousel slide ">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner ">
                        <div class="carousel-item active">
                            <img src="/theme_GZ/static/src/img/slide-1.jpg" class="d-block w-100"
                                 alt="Ghana Free Zones Single Window is the one stop shop for free zone investment in Ghana"/>
                            <div class="carousel-caption">
                                <h1>Ghana Free Zones Single Window</h1>
                                <h4>is the one stop shop for free zone investment in Ghana</h4>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/theme_GZ/static/src/img/slide-2.jpg" class="d-block w-100"
                                 alt="Easy Free Zones License Acquisition Get your free zone operating license hassle free"/>
                            <div class="carousel-caption">
                                <h1>Easy Free Zones License Acquisition</h1>
                                <h4>Get your free zone operating license hassle free</h4>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/theme_GZ/static/src/img/port.jpg" class="d-block w-100"
                                 alt="One Platform for Everything Free Zone in Ghana Perform all Ghana Free Zone Related Activities from A to Z on one system"/>
                            <div class="carousel-caption">
                                <h1>One Platform for Everything Free Zone in Ghana</h1>
                                <h4>Perform all Ghana Free Zone Related Activities from A to Z on one system</h4>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <!-- Carousel End -->


            </header>
        </xpath>
    </template>
</odoo>
